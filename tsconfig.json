{
    "compilerOptions": {
        "target": "es5",
            "lib": [
                "dom",
                "dom.iterable",
                "esnext"
        ],
        "outDir": "public/build/",
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "isolatedModules": true,
        "jsx": "react",
        "baseUrl": "assets",
        "paths": {
            "@components/*" : ["components/*"],
            "@pages/*" : ["pages/*"],
            "@cards/*" : ["cards/*"],
            "@interfaces/*" : ["interfaces/*"]
        }
},
    "include": [
    "assets"
]
}